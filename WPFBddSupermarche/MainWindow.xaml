<Window x:Class="WPFBddSupermarche.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBddSupermarche"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Gestion du Supermarche" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Height="20" />
        <Button x:Name="btnRayonSecteur" Click="BtnRayonSecteur_Click" Content="Rayons/Secteur" Grid.Row="2"></Button>
        <Button x:Name="btnNewEmploye" Click="BtnNewEmploye_Click" Content="New Employe" Grid.Row="2" Grid.Column="1"></Button>
        <Button x:Name="btnGestionH" Click="BtnGestionH_Click" Content="Gestion Horaires" Grid.Row="2" Grid.Column="2"></Button>

    </Grid>
</Window>
